<div class="row">
    <div class="col m6 offset-m3 center ">

      <h5 style="color: #01579b">Change Password</h5>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
        <%= render partial: "shared/devisemes" %>
        <%= f.hidden_field :reset_password_token %>

        <div class="input-field">
          <%= f.password_field :password, autofocus: true, :placeholder => "New Password", autocomplete: "off" %>
        </div>

        <div class="input-field">
          <%= f.password_field :password_confirmation, :placeholder => "Confirm New Password", autocomplete: "off" %>
        </div>

        <button class="btn waves-effect waves-light light-blue darken-4" type="submit" name="action">Change Password</button>
      <% end %>
    </div>
</div>
