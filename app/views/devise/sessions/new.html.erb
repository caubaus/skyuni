<div class="row">
    <div class="col m6 offset-m3 center">

      <h5 style="color: #01579b">Sign In</h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render partial: "shared/devisemes" %>

        <div class="input-field">
          <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "Email" %>
        </div>

        <div class="input-field">
          <%= f.password_field :password, :id => "email", :class => "validate", :placeholder => "Password", autocomplete: "off" %>
        </div>

        <button class="btn waves-effect waves-light light-blue darken-4" type="submit" name="action">Sign In</button>
        <%= link_to "Forgot Password", new_user_password_path, :class => "btn waves-effect waves-light light-blue darken-4" %>
      <% end %>
    </div>
</div>
